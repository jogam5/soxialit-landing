$('.vote_micropost_<%= @micropost.id %>').text('<%= pluralize @micropost.reputation(@micropost), "vote" %>');
var x = "<%= params[:type] %>";
if (x == "up"){
	$('#vote_up_<%= @micropost.id %>').addClass('vote_up_icon_active');
	$('#vote_up_<%= @micropost.id %>').empty();
	$('#vote_down_<%= @micropost.id %>').removeClass().addClass('vote_down_icon');
	$('#vote_down_<%= @micropost.id %>').html('<%= link_to "xxx", vote_micropost_path(@micropost, type: "down"), :remote => true, method: "post", class: "trick_anchor" %>');
}else {
	$('#vote_down_<%= @micropost.id %>').addClass('vote_down_icon_active');
	$('#vote_down_<%= @micropost.id %>').empty();
	$('#vote_up_<%= @micropost.id %>').removeClass().addClass('vote_up_icon');
	$('#vote_up_<%= @micropost.id %>').html('<%= link_to "xxx", vote_micropost_path(@micropost, type: "up"), :remote => true, method: "post", class: "trick_anchor" %>');
}


