<div id="modal-micropost"></div>
<div style="display:block" id="contenedor" class="clearfix masonry">
	<%= render @microposts %>
</div>

<div style="display:none"><%= will_paginate(@microposts)%></div>
<div style="display:block" class="container">
	<div style="display:block" class="row">
		<div style="display:block" class="span10 offset1">
			<div  style="display:block" class="show_more" id="paginate">Ver mas Posts</div>
			<div id="ajax-status" style="float:left; position:absolute; display:none; margin: -15% 30%; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
		</div>
	</div>
</div>

<script type="text/javascript">

$(function() {
 
	jQuery(function(){
		if ($('.pagination').length) {
			var url;
			$('#paginate').show();
			$('#paginate').bind('click', function(){
				url = $('.pagination .next_page').attr('href');
				return $.getScript(url);
			});
		}
	});
});


$(function() {
  $('body').bind('ajaxComplete', function() {
	$('.show_more').hide();
	$('#ajax-status').show();
	setTimeout(function(){
		var wall = new Masonry( document.getElementById('contenedor') );
		wall.reload();
		$('#ajax-status').hide();
		$('.show_more').show();
	}, 1000);
  });
});


</script>

<script type="text/javascript">mixpanel.track("Microposts Feed")</script>
