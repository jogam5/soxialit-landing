<div id="modal-micropost"></div>
<div style="display:block" id="contenedor" class="clearfix masonry">
	<%= render @microposts %>
</div>

<div style="display:none"><%= will_paginate(@microposts)%></div>
<div class="container">
	<div class="row">
		<div class="span8">
			<div class="show_more" id="paginate">Ver mas Posts</div>
		</div>
	</div>
</div>

<script type="text/javascript">

function afterLoad() {
	var container = document.getElementById('contenedor');
	var wall = new Masonry(container);
	container.style.display = "block";
	wall.reload();
}
$(document).ready(function(){
$("body").bind("ajaxComplete", function(e, xhr, settings){
           afterLoad();
        });
});

</script>

<script type="text/javascript">mixpanel.track("Microposts Feed")</script>
