<div id="modal-micropost"></div>
<div style="display:block" id="contenedor" class="clearfix masonry">
	<%= render @microposts %>
</div>

<div style="display:none"><%= will_paginate(@microposts)%></div>
<div style="display:block" class="container">
	<div style="display:block" class="row">
		<div style="display:block" class="span10 offset1">
			<div  style="display:block; margin:1em; font-size:1.4em" class="show_more" id="paginate">Ver m√°s Posts</div>
			<div id="ajax-status" style="float:left; position:absolute; display:none; margin: -15% 30%; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
		</div>
	</div>
</div>
<br/>
<script type="text/javascript">
window.onload = function(){
	
	var container = document.getElementById('contenedor');
	var wall = new Masonry(container);
	container.style.display = "block";
	wall.reload();
	
};

$(function() {
 
	jQuery(function(){
		if ($('.pagination').length) {
			var url;
			$('#paginate').show();
			$('#paginate').bind('click', function(){
				url = $('.pagination .next_page').attr('href');
				return $.getScript(url);
			});
		}
	});
});


$(function() {
  $('body').bind('ajaxComplete', function() {
	$('.show_more').hide();
	$('#ajax-status').show();
	setTimeout(function(){
		var wall = new Masonry( document.getElementById('contenedor') );
		wall.reload();
		$('#ajax-status').hide();
		$('.show_more').show();
	}, 1000);
  });
});

  	$('.frame_link_favorites').live({
		mouseenter: 
		function(e){
			$(this).css("box-shadow", "1px 1px 2px 0px #d0d0d0");
			$(this).css("margin-top", "2%");
			
		},
		mouseleave:
		function (e){
			e.preventDefault();
			$(this).css("box-shadow", "none");
			$(this).css("margin-top", "1%");
			
		}
	});
			
</script>

<script type="text/javascript">mixpanel.track("Microposts Feed")</script>
