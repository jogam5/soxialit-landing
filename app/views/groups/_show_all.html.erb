<div class="row">
  <div class="span12">
    <% if @all_stories.any? %>
      <ol class="microposts">
        <% @all_stories.each do |story| %>
		  <li id="<%= story.id %>">
		    <div class="row">
		      <div class="span6">
		        <% if story.picture? %>
		    	  <%= link_to image_tag(story.picture_url(:link_480)), story.url, target: '_blank' %>
		    	<% else %>
				  <%= link_to image_tag(story.thumbnail), story.url, target: '_blank' %>
		    	<% end %>
		      </div>
		      <div class="span1">
		      	<p>Contador</p>
		      </div>
		      <div class="span5">
		      	<span id="item_link_micropost" style="font-size:2.2em; line-height:1.2em"><%= link_to story.title,
													story.url, target: '_blank' %></span>
		      	<div class="timestamp" style="margin-top:1em">
		      	  <p><%= time_ago_in_words(story.created_at) %> by
		          <%= link_to story.user.nickname, user_path(story.user) %>
		          </p>
		        </div>
		      </div>
		    </div>
		  </li>
		  <br /><br />
        <% end %>
      </ol>
    <% else %>
    	<h3>SÃ© el primero en compartir una historia.</h3>
    <% end %>
  </div>
</div>