<div style="text-align:right">
	<%= link_to "LISTA", list_path(@group), remote: true, style: "color: red;", class: 'lista_link' %> | <%= link_to "SQUARE", square_path(@group), remote: true, class: 'square_link' %> 
</div>
<br /><br />
<% if @trend.any? %>
  <ol class="microposts">
	<div id="ajax_trend_stories">
	  <%= render :partial => 'groups/list', :collection => @trend, :as => :story   %>
	</div>  
  </ol>
<% else %>
	<h3>SÃ© el primero en compartir una historia.</h3>
<% end %>

<script>
$(function(){
    $('.square_link').live('click', function(){
      $('.lista_link').css('color', 'rgb(0, 136, 204)');
      $(this).css('color', 'red');
    });

    $('.lista_link').live('click', function(){
      $('.square_link').css('color', 'rgb(0, 136, 204)');
      $(this).css('color', 'red');
    })
  });
$(function() {
 
  jQuery(function(){
    if ($('.pagination').length) {
      var url;
      //$('#paginate').show();
      $('#paginate_trend').bind('click', function(){
        url = $('.pagination .next_page').attr('href');
        return $.getScript(url);
      });
    }
  });
});

$(function(){
  var a = $('.pagination').find('a').length;
  if (a < 0){
    $('#paginate_trend').hide();
  }
});

$(function() {
  $('body').bind('ajaxComplete', function() {
   var a = $('.pagination').find('a').length;
    if (a < 1){
      $('#paginate_trend').hide();
    }
  });
});
</script>