<% if current_user.roles.first.name == 'admin' %>
<h1>Listing products</h1>

<%= form_tag status_products_path, :method => :put do %>
	<table>
	  <tr>
	    <th>Brand</th>
	    <th>Price</th>
	    <th>Picture</th>
	    <th>Title</th>
	    <th>User</th>
	    <th>Check</th>
		<th>Status</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

		<% @products.each do |product| %>
		  <tr>
		    <td><%= product.brand %></td>
		    <td><%= product.price %></td>
		    <td><%= product.picture %></td>
		    <td><%= product.title %></td>
		    <td><%= product.user_id %></td>
			<td>
				<%= check_box_tag "status_ids[]", product.id %>
			</td>
			<td><%= product.status %></td>
		    <td><%= link_to 'Show', product %></td>
		    <td><%= link_to 'Edit', edit_product_path(product) %></td>
		    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	</table>
	<%= submit_tag "Actualizar" %>
<% end %>

<br />



    <%= link_to 'New Product', new_product_path %>
<% else %>

<h1>¡Hey! Por ahora no puedes acceder a esta página</h1>

<%= link_to "Regresar a mi Perfil", user_path(current_user) %>

<% end %>
