<div id="backpack" class="row">
	<div id="contenedor" class="clearfix masonry">
 		<% @products.each do |product| %>
		<div class="box photo col3 masonry-brick">
	 	  <div id="favorites_frame">
			<div id="favorites_image">
			  	<%= link_to tag(:img, { :src => product.picture }, false), product %>
		
				<% if signed_in? %>
					<div style="margin-right:-21%; margin-top: -9%" class="votacion" id="votacion_<%= product.id %>">
						<% if product.id == current_user.voted_by?(current_user.evaluations, product.id) %>
							<span id="want_<%= product.id %>">
								<div id="love_icon_<%= product.id %>" class="love_icon_active">
									<span style="float:left; display:block; margin-left:-50%; color:black" id="product_<%= product.id %>">
										<%= product.reputation_value_for(:votes).to_i %>
									</span>
								</div>
				   			</span>
							<% elsif current_user && !current_user.voted_for?(product) %>
								<span id="want_<%= product.id %>">
									<div id="love_icon_<%= product.id %>" class="love_icon">
										<span style="float:left; display:block; margin-left:-50%; color:black" id="love_product_<%= product.id %>">
											<%= product.reputation_value_for(:votes).to_i %>
										</span>
										<%= link_to "x", vote_product_path(product, type: "up"), :class =>"trick_anchor", :remote => true,  method: "post", id: "link" %>
									</div>
					   			</span>
						<% end %>
					</div>
				<% end %>
		 	</div>
		 	<p style="text-align:center"><strong><%= product.title %></strong> 
		 		<span style="color:#DD390D">$<%= product.price %></span> by <span style="color:#999"><span id="product_designer"><%= link_to product.brand, user_path(product.user_id) %></span></span>
		 	</p>
		  </div>
		</div>
	  	<% end %>
	</div>
</div>