<%= content_tag "div", id: "products", data: {id: product.id } do %>

<div class="image" id="producto_<%= product.id %>">
	<div style="height:200px;">
		<%= image_tag product.picture_url(:thumb) if product.picture.present? %>
	</div>
		<% if signed_in? %>
		<div class="reputation" id="reputation_<%= product.id %>">
		 	<span id="want_product_<%= product.id %>">
				<i class="icon-star-empty icon-white"></i><%= pluralize product.reputation_value_for(:votes).to_i, "Want" %>
			</span>
		<!--	<span id="have_product_<%= product.id %>">
				<i class="icon-ok icon-white"></i><%= pluralize product.reputation_value_for(:haves).to_i, "Have" %>
			</span> -->
			<br/> 
		</div>
		<div class="votacion" id="votacion_<%= product.id %>">
			<% if product.user_id == find_evaluation_id(current_user.evaluations)%>
				<% elsif current_user && !current_user.voted_for?(product) %>
					<span id="want_<%= product.id %>">
				 		<%= link_to '<i class="icon-star-empty icon-white"></i> Want'.html_safe, vote_product_path(product, type: "up"), :remote => true,  method: "post", :class => "button-want", id: "link" %>
			   		</span>
				<!--	<span id="have_<%= product.id %>">
						<%= link_to '<i class="icon-ok icon-white"></i> Have'.html_safe, have_product_path(product, type: "up"), :remote => true, method: "post", :class => "button-have", id: "link" %>
					</span> -->
			<% end %>
		</div>
		
	<% end %>

	<div class="product_title"> <%= "#{product.title}"%> por <br/><strong><%= "#{product.brand}" %></strong></div>
</div>

<% end %>


