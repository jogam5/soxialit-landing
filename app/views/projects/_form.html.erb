<%= form_for @project, :validate => true do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibieron la publicación de este proyecto:</h2>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="title_feed">Publica uno de tus proyectos y compartelo en <strong style="color:#DD390D">Soxialit</strong></div>
  <br/>
  <div class="field">
    <%= f.label :name, "Título de tu proyecto", :class => "small_feed" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location, "Donde fue creado (locación).", :class => "small_feed" %>
    <%= f.text_field :location %>
  </div>
  <div class="field">
	  <%= f.label :tag_list, "Tags (separados por comas)" %><br />
	  <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :description, "Describe tu proyecto.", :class => "small_feed" %>
    <%= f.text_area :description, rows:"10", :class => "span10" %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  
  <div class="actions">
	<%= link_to 'Cancelar', current_user, :class => "button-unfollow" %>
    <%= f.submit "Crear", :class => "button-want" %>
  </div>
<% end %>
