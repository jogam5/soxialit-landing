<br/><br/>

<script type="text/javascript">

mixpanel.track("Las 7 de Pauline")
if (history && history.pushState) {

	$(function(){
		$('#newsletters').find('a').live('click', function(){
			$.getScript(this.href);
			history.pushState(null, "", this.href);
		   	return false;
		});
		$(window).bind("popstate", function () {
		    $.getScript(location.href);
		  });
	});
}

$(function(){
  $('#index_pauline').css('color', 'red');
  $('#index_pauline').css('border-bottom', '1px solid red');
});

</script>