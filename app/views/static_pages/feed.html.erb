    </div>
   </div><!--/.well -->
 </div><!--/span-->
 <div class="span8">
  <br />
  <div id="ajax" style="float:left; position:fixed; display:none; margin: 20% 455px; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
  <div class="tabbable" style="margin-bottom: 18px;">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab1" data-toggle="tab">TOP</a></li>
      <li class=""><a href="#tab2" data-toggle="tab">NUEVOS</a></li>
      <li class=""><a href="#tab3" data-toggle="tab">TRENDING</a></li>
    </ul>
    <div class="tab-content" style="padding-bottom: 9px; border-bottom: 1px solid #ddd;">
      <div class="tab-pane active" id="tab1">
        <%= render 'show_top' %>
      </div>
      <div class="tab-pane" id="tab2">
        <%= render 'show_new' %>
      </div>
      <div class="tab-pane" id="tab3">
        <%= render 'show_trend' %>
      </div>
     </div>
  </div>
 </div><!--/span-->
</div><!--/row-->
</div><!--/.fluid-container-->

<script type="text/javascript">
$(function() {
  $('#ajax')
    .hide()  // hide it initially.
    .ajaxStart(function() {
      $(this).show(); // show on any Ajax event.
    })
    .ajaxStop(function() {
      $(this).hide(); // hide it when it is done.
  });
});
</script>