<div style="margin-left: -12%; width: 1200px;"class="row">
	<div class="span4" style="background-color:black; margin-left:17px">
		<div id="myCarousel" class="carousel slide">
			<h3 style="color:#b7b7b7; margin-left:6%">El mundo del diseñador</h3>
		  <!-- Carousel items -->
		  <div class="carousel-inner">
			<div class="active item"><img src="http://i1246.photobucket.com/albums/gg616/soxialit/blogger-image--194456190_zpsa97913ff.jpg" border="0" alt=" photo blogger-image--194456190_zpsa97913ff.jpg"/></div>
		    <div class="item"><img src="http://i1246.photobucket.com/albums/gg616/soxialit/men13_zps3138c893.png" border="0" alt=" photo men13_zps3138c893.png"/></div>
		    <div class="item"><img src="http://i1246.photobucket.com/albums/gg616/soxialit/men12_zps6730d122.png" border="0" alt=" photo men12_zps6730d122.png"/></div>
		  </div>
		  <!-- Carousel nav -->
		  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
		</div>
	</div>
	<div class="span10">
		<% @products.each do |product| %>
			<div class="frame_item_designer">
			  <div class="designer_photo">
				<%= link_to image_tag(product.picture),  modal_item_path(:product_id => product.id ), {:id => "modal", :rel => "tab", :remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true} %>
			  </div>
			  <div class="designer_info">
				<p class="brand">
					<%= product.brand%>
				</p>
				<p class="description">	
					<%= product.description %>
				</p>
				<p class="description">
					$<%= product.price %>0
				</p>
			  </div>
			</div>
		<% end %>
	</div>
</div>

<script>
$(document).ready(function(){
	$("body").animate({
	    backgroundColor : "rgb(245, 245, 245)"
	});
	$('#profile_nav_botton').css({ boxShadow: '1px 3px 6px #444' });
});
	
$('.frame_item_designer').live({
	mouseenter: 
	function(e){
		$(this).css("box-shadow", "0px 1px 1px 3px #d0d0d0");
		
	},
	mouseleave:
	function (e){
		e.preventDefault();
		$(this).css("box-shadow", "none");
	}
});	
</script>