
<%= form_for @user, :url => wizard_path, :html => { :multipart => true } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= yield f %>

  <br />
  <h5>Elige un perfil:<br /> (<i>el tipo de perfil s√≥lo se puede seleccionar una vez</i>)</h5>
  
  <% for role in Role.find(:all) %>
    <div>
        
          <%= radio_button_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
          <%= role.name %>
        
    </div>
  <% end %>
  <br />
  
  <div class="actions">
    <%= f.submit "Crear Perfil", :class => "button-want" %>
  </div>
<% end %>
