    </span>
    <span id="footer_login" class="span7">
      <% @users.each do |user| %>
        <div class="span2 offset1">
          <% if !user.picture.present? %>
            <%= image_tag("http://graph.facebook.com/#{user.uid}/picture?type=square", 
                  width: 50, height: 50, :id =>  "nickname_small_picture") %>
          <% else %>
            <%= image_tag(user.picture_url(:thumb_profile), :id => "nickname_small_picture") %>
          <% end %>
          <hr />
        </div>
      <% end %>
    </span>
  </div>  
  <hr />
