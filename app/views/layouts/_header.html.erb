<header class="navbar navbar-fixed-top">
		<div
		 style="background-color:black;
				background: -webkit-linear-gradient(top, black, black);
				background: -moz-linear-gradient(top, black, black);"
		 class="navbar-inner">
			<div class="container">
				<span class="span6">
					<div id="titleProfile"><%= link_to "Soxialit", feed_path %></div>
				</span>
				<nav>
				  <ul class="nav pull-right">
					<% if user_signed_in? %>
						<li id="feedback_header"><%= link_to "HELP US!", feedbacks_path, :title => "Te queremos escuchar"%></li>
						<li class="divider-vertical"></li>
					    <li id="feedback_header">
							<%= link_to "Comprar", products_path, :title => "Comprar" %>
					   	</li>
					   	<li class="divider-vertical"></li>
					    <li id="feedback_header">
							<%= link_to "Posts", microposts_path, :title => "Descubre" %>
					   	</li>
						<li class="divider-vertical"></li>
						<li><% if !current_user.picture.present? %>
							<%= link_to image_tag("http://graph.facebook.com/#{current_user.uid}/picture?type=square", 
										width: 35, height: 35, :id =>  "navbar_small_picture"), user_path(current_user) %>
						<% else %>
							<%= link_to image_tag(current_user.picture_url(:thumb_profile), 
										width: 35, height: 35, :id => "navbar_small_picture"), user_path(current_user) %>
						<% end %></li>
							<li id="fat-menu" class="dropdown">
					              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
						        	<b class="caret"></b>
					              </a>
					              <ul id="profile_menu" class="dropdown-menu">
					                <li><%= link_to '<i class="icon-edit"></i> Editar Perfil'.html_safe, edit_user_path(current_user), id:"anchor_edit" %></li>
					                <li class="divider"></li>
					                <li><%= link_to '<i class="icon-user"></i> Conecta'.html_safe, users_path, 
					                			id:"anchor_edit" %></li>
					               	<li class="divider"></li>
					               	<li>
					                  <%= link_to "Compartir Link", feed_path %>
					                </li>
					                <li class="divider"></li>
					                <li>
					                  <%= link_to "Salir", destroy_user_session_path, :method => :delete %>
					                </li>
					              </ul>
					        </li>
					<% else %>
						<li id="signup"><%= link_to "Posts", 
												microposts_path %></li>
						<li class="divider-vertical" style="color:yellow"></li>
						<li id="signin"><%= link_to "Regístrate", user_omniauth_authorize_path(:facebook) %></li>
	   				<% end %>
              	  </ul>
              	</nav>
			</div>
		</div>
		<div id="profile_nav_botton"></div>
</header>
<% if !user_signed_in? %>
	<div id="banner">
		<div style="float:left; font-size:1.1em; font-family:acta-display, Helvetica-Neue">
			<p>Soxialit es una red social de artistas, creativos y personas que aman la moda.</p>
		</div>
		<div style="float:right">
			<%= link_to "Crea tu cuenta", user_omniauth_authorize_path(:facebook), class: "button-want" %>
		</div>
		<div style="float:right; margin-right:2%">
			<div id="signup"><%= link_to "Iniciar Sesión", user_omniauth_authorize_path(:facebook), style:"font-size: 1.1em" %></div>
		</div>
	</div>
<% end %>

<script>
		$('#fat-menu').click(function(){
			$('#profile_menu').toggle();
			
		});
		
		$('#anchor_edit').click(function(){
			event.cancelBubble = true;
		});
		
		$('body').live("click",function(){
			$('#profile_menu').hide();
		});
	
</script>