<!DOCTYPE html>
<html>
<head>
  <title>Soxialit- La Fashion Social Network para Mexico y Latinoamerica</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Dosis|Lobster|Raleway|Quicksand|Tenor+Sans' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="container">
      <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %>">
          <button class="close" data-dismiss="alert">x</button>
          <%= message %>
      </div>
    <% end %>
  <%= yield %>
  <%= render 'layouts/footer' %>
</div>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-31179966-2']);
  _gaq.push(['_setDomainName', 'soxialit.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</body>
</html>