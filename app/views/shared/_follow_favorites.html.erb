<%= form_for(current_user.relationships.build(followed_id: user.id),
             remote: true) do |f| %>
  <div><%= f.hidden_field :followed_id %></div>
  <%= link_to 'Follow', "#", :onclick=>"$('.new_relationship').submit()", :style => "color:#08c; font-size:0.8em", class: "follow_link" %>
<% end %>