	<div class="row-fluid">
		<div id="profile">
			<div class="span2">
				<span id="profile_picture">
					<%= render 'users/profiles/profile_picture' %>
				</span>
				<section>
					<%= render 'shared/stats' %>
				</section>
			</div>
			<div class="span5">
				<p id="username"><%= @user.username %></p>
				<p>
					<% if @user.roles.first.name == 'fashion lover' %>
						<span id="fashionlover">fashion lover</span>
					<% elsif @user.roles.first.name == 'designer' %>
						<span id="designer"> designer</span>
					<% elsif @user.roles.first.name == 'boutique store' %>
						<span id="boutique">boutique store</span>
					<% elsif @user.roles.first.name == 'blogger' %>
						<span id="blogger">blogger</span>
					<% elsif @user.roles.first.name == 'fotografo' %>
						<span id="fotografo">fotógrafo</span>
					<% else %>
						<span id="queen">Queen</span>
					<% end %>
					<span id="location"><i class="icon-map-marker"></i><%= @user.location %></span>
				</p>
				<p id="bio"><%= @user.bio %></p>
				<p id="url"><i class="icon-globe"></i> <%= link_to @user.website, @user.website %></p>
			</div>
			<div class="span3">
				<div id="bio">
					<%= render 'follow_form' if user_signed_in? %>
				</div>
			</div>
			<div class="span1">
			</div>
		</div>
	</div>
	<hr />	
		<% if current_user == @user %>
			<h2 style="text-align:center">¡Pronto llegará tu invitación!</h2><br />
			<h4 id="anuncios">Ayúdanos a hacer más grande la comunidad con un tweet:</h4>

			<p style="text-align:center"><%= image_tag "twitter-bg.png" %> 
			"Reserva tu nickname en @Soxialit, la red social que conecta fashion designers, bloggers y boutiques en México y LatAm: soxialit.com"
			<a href="https://twitter.com/share" class="twitter-share-button" data-url="www.soxialit.com" data-text="Reserva tu nickname en @Soxialit, la red social que conecta fashion designers, bloggers y boutiques en México y LatAm:" data-size="large">Tweet</a>
			<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
			</p>
			<hr />
			<div style="margin-bottom:10%" class="container" >
				<%= render @products %>
			</div>
			<hr />
		
			<h4 id="anuncios">Descubre Soxialit</h4>
			<h3 style="text-align:center">Sígue a otros #fashionlovers:</h3>
			<br />
			<% @users.each do |user| %>
				<span class="span1 offset1">
					<% if !user.picture.present? %>
						<%= link_to image_tag("http://graph.facebook.com/#{user.uid}/picture?type=square", 
									width: 50, :id =>  "nickname_small_picture"), user_path(user) %>
					<% else %>
					    <%= link_to image_tag(user.picture_url(:thumb_profile), :id => "nickname_small_picture"),
					    			user_path(user) %>
					<% end %>
				</span>
				<span class="span3" id="nickname_users_list">
					<%= link_to user.username, user_path(user) %> | 
						<% if user.roles.first.name == 'fashion lover' %>
							<span id="fashionlover_list">fashion lover</span>
						<% elsif user.roles.first.name == 'boutique store' %>
							<span id="boutique_list">boutique store</span>
						<% elsif user.roles.first.name == 'admin' %>
							<span id="admin_list">QUEEN</span>
						<% else %>
							<span id="<%=user.roles.first.name%>_list"><%= user.roles.first.name %></span>
						<% end %>
					<br />
			      	<span id="nickname_small_followers">followers: <%= user.followers.count %><br />
			      	<i class="icon-map-marker"></i><span id="nickname_small_location"><%= user.location %></span>
			      	</span>
			      	<hr />
				</span>
			<% end %>
		<% else %>
			<%= link_to "Regresar", user_path(current_user) %>	
		<% end %>

<script type="text/javascript">
  mixpanel.people.set({
    "$location": "<%=@user.location%>"
  })
</script>