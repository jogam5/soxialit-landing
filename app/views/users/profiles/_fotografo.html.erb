<%= render 'users/profiles/profile_header' %>
<div style="margin-top:1%" class="navbar">
	<div class="navbar-inner">
		<div class="container">
			<nav>
				<ul class="nav pull-left">
					<li id="profile_nav_bar"><%= link_to "Proyectos", list_projects_path(@user),
					 		remote:true %></li>
					<li class="divider-vertical"></li>
					<li id="profile_nav_bar"><%= link_to image_tag('like-active.png'), favorites_path(@user),
							remote: true %></li>
					<li class="divider-vertical"></li>
				</ul>
				<ul class="nav pull-right">
					<% if current_user == @user %>
						<% if current_user.roles.first.name == "fotografo" %>
						<li class="divider-vertical"></li>
						<li >
							<%= link_to image_tag('project.png'), new_project_path %> 
						</li>
						<li class="divider-vertical"></li>
						<li>
							<%= link_to image_tag('post.png', style:"margin-left:50%"), new_post_path %>
						</li>
						<% end %>
					<% end %>
              	</ul>
            </nav>
		</div>
	</div>
</div>
<div id="ajax-status" style="float:left; position:absolute; display:none; margin: 0% 33%; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
