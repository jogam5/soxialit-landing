<% if @user.role?(:admin) %>
  <section>
    <%= render 'users/profiles/admin' %>
   </section>
<% elsif @user.role?(:designer)  %>
  <section>
    <%= render 'users/profiles/designer' %>
  </section>
<% elsif @user.role?(:'fashion lover')  %>
  <section>
    <%= render 'users/profiles/fashionlover' %>
  </section>
<% elsif @user.role?(:'blogger')  %>	
  <section>
    <%= render 'users/profiles/blogger' %>
  </section> 
<% elsif @user.role?(:'fotografo')  %>
  <section>
    <%= render 'users/profiles/fotografo' %>
  </section>  
<% elsif @user.role?(:'boutique store')  %>
  <section>
    <%= render 'users/profiles/boutique' %>
  </section>
<% end %>
<div id="ajax-loading" style="float:left; position:fixed; display:none; margin: 0% 455px; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
<div id="ajax">
  <div class="row">
   <div class="span12">
    <% if @activities.any? %>
     <ol class="microposts">
      <% @activities.each do |feed_item| %>
        <%= render :partial => 'feed/feed_item', :locals => { :feed_item => feed_item } %>
      <% end %>
     </ol>
	<% else %>
		<div class="container">
			<div class="row">
				<div style="margin-left:30%">
					<p class="description-brand" style="margin-left:4%; font-family:acta-display; font-size:1.8em"><%= link_to "Guarda tus items รณ posts favoritos", microposts_path %></p>
					<div style="margin-left:10%"><%= link_to image_tag('no_favorites.png'), microposts_path%></div>
				</div>	
			</div>
		</div>
    <% end %>
   </div>
  </div>
</div>
<script type="text/javascript">
mixpanel.track("User Profile Loaded")


$(function() {
  $('#ajax-loading')
    .hide()  // hide it initially.
    .ajaxStart(function() {
      $(this).show(); // show on any Ajax event.
    })
    .ajaxStop(function() {
      $(this).hide(); // hide it when it is done.
  });
});

</script>