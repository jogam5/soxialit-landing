<p id="main_header_menu" style="text-align:center">¡Encuentra gente interesante a quién seguir!</p>
	<div class="users_follow" style="text-align:center">
		<span><%= link_to "Fashion Lovers / ", fashionlover_path, :remote => true, :class => "link_user_index" %></span>
		<span><%= link_to " Designers / ", designer_path, :remote => true, :class => "link_user_index" %></span>
		<span> <%= link_to " Boutiques / ", boutique_path, :remote => true, :class => "link_user_index" %></span>
		<span> <%= link_to " Bloggers / ", blogger_path, :remote => true, :class => "link_user_index" %></span>
		<span>  <%= link_to " Fotógrafos", fotografo_path, :remote => true, :class => "link_user_index" %></span>
	</div>
  <br>
<div id="ajax-status" style="float:left; position:absolute; display:none; margin: 0% 33%; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
  <div id="user_roles">
	<% @fashionlovers.each do |lover| %>
		<%= render :partial => 'user', :object => lover %>
	<% end %>
  </div>
<% if user_signed_in? %>
 <% if current_user.roles.first.name == 'admin' %>
  <h1>Listing users</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
  <br />
 <% end %>
<% end %>

<script type="text/javascript">
	$(function() {
	  $('#ajax-status')
	    .hide()  // hide it initially.
	    .ajaxStart(function() {
	      $(this).show(); // show on any Ajax event.
	    })
	    .ajaxStop(function() {
	      $(this).hide(); // hide it when it is done.
	  });
	});
</script>

