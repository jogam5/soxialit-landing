<% if current_user.roles.first.name == 'admin' %>
	<div class="users_follow">
		<span><%= link_to "Fashion Lovers / ", fashionlover_path, :remote => true %></span>
		<span><%= link_to " Designers / ", designer_path, :remote => true %></span>
		<span> <%= link_to " Boutiques / ", boutique_path, :remote => true %></span>
		<span> <%= link_to " Bloggers / ", blogger_path, :remote => true %></span>
		<span>  <%= link_to " Fotógrafos / ", fotografo_path, :remote => true %></span>
	</div>
  <hr>
  <div id="ajax-status" style="float:left; display:none; margin: 0 50% 0 50%; z-index: 3000"><%= image_tag("ajax-loader.gif") %></div>
  <div id="user_roles"></div>

  <h1>Listing users</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>

      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
  </table>

  <br />

<% else %>

  <h1>¡Hey! Por ahora no puedes acceder a esta página</h1>
  <%= link_to "Regrsar a mi Perfil", user_path(current_user) %>

<% end %>