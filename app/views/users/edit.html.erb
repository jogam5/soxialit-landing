<h3 id="moveToRight">Editar Perfil</h3>

<div class="row">
  <div class"span6">
    <div style="width:50%; background-color:#F4F2F1" class="well">
      <%= form_for @user, :html => { :multipart => true } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <h4>Nombre de usuario</h4>
          <p>( www.soxialit.com/<span id="fashion">username</span> )</p>
          <%= f.text_field :username %>
        </div><hr />
          <h4>Foto de perfil</h4>
        <div class="field">
          <% if !@user.picture.present? %>
          	<%= image_tag "http://graph.facebook.com/#{@user.uid}/picture?type=square" %>
          <% else %>
          	<%= image_tag(@user.picture_url, :width => 100) %>
          <% end %>
          <p>Foto actual</p>
          	<%= f.file_field :picture %>
        </div><br />
        <div class="field">
          <h4>Ubicaci√≥n</h4>
          	<%= f.text_field :location, :placeholder => "Ej. Amsterdam" %>
        </div><br />
        <div class="field">
          <h4>Website, Blog o Facebook Fan Page</h4>
          	<%= f.text_field :website, :placeholder => "Ej. www.soxialit.com" %>
        </div>
        <div class="field">
          <h4>Bio</h4>
          <p>(Dile al mundo un poco de ti)</p>
          	<%= f.text_area :bio, rows: 5 %>
        </div>

        <% if current_user.roles.first.name == "admin" %>
          <h5>Selecciona un perfil:</h5>
          <% for role in Role.find(:all) %>
            <div>
                <% unless role.name == "admin" %>
                  <%= radio_button_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
                  <%= role.name %>
                <% end %>
            </div>
          <% end %>
        <% end %>        
        
        <br />
        <div class="actions">
          <%= f.submit "Actualizar Perfil", :class => "button-want" %>
        </div>
      <% end %>

        <hr />
        <%= form_for(@direction, :url => direction_path, remote: true) do |f| %>
          <%= f.text_field :zipcode, :placeholder => "Zipcode" %>
          <%= f.submit "Update ZipCode", :class => "button-want" %>
        <% end %>
        <div id="address_form">
          <h4> ZIP actual </h4>
          <%= @address.zipcode if @address.present? %>
        </div>

    </div>
  </div>
</div>