$(document).ready(function(){
	var pathname = window.location.href;
	$('.fb-like').data('href', pathname);
	$('#micropost_url').val(pathname);
});


$(document).ready(function(){
	$('#copy-some-txt').zclip({
	    copy: 
			function(e){
				url = $('#micropost_url').val();
				return url 
			},
	    beforeCopy: function() {
		 	$('#copied').fadeIn('slow');
	    },
	    afterCopy: function() {
		 	$('#copied').fadeOut('slow');
	    }
	});
});


/* Loading image */
$(function() {
  $('#ajax-status')
    .hide()  // hide it initially.
    .ajaxStart(function() {
      $(this).show(); // show on any Ajax event.
    })
    .ajaxStop(function() {
      $(this).hide(); // hide it when it is done.
  });
});
