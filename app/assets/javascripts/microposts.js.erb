$(document).ready(function(){
	var pathname = window.location.href;
	$('.fb-like').data('href', pathname);
});


jQuery(function(){
	if ($('.pagination').length) {
		var url;
		$('#paginate').show();
		$('#paginate').bind('click', function(){
			url = $('.pagination .next_page').attr('href');
			return $.getScript(url);
		});
	}
});


